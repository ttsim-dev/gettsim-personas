{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "required": ["name", "description", "purpose", "policy_inputs", "policy_inputs_overriding_functions", "targets_tree"],
    "properties": {
      "name": {
        "type": "string"
      },
      "description": {
        "type": "string"
      },
      "purpose": {
        "type": "string"
      },
      "start_date": {
        "type": "string",
        "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
      },
      "end_date": {
        "type": "string",
        "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
      },
      "policy_inputs": {
        "type": "object",
        "additionalProperties": {
          "type": ["array", "object"],
          "items": {
            "type": ["integer", "number", "boolean", "string"]
          }
        }
      },
      "policy_inputs_overriding_functions": {
        "type": "object",
        "additionalProperties": {
          "type": ["array", "object"],
          "items": {
            "type": ["number", "boolean", "string"]
          }
        }
      },
      "targets_tree": {
        "type": "object",
        "additionalProperties": {
          "type": ["object", "null"],
          "properties": {
            "value": {
              "type": ["null"]
            },
            "details": {
              "type": "object",
              "additionalProperties": {}
            }
          }
        }
      }
    }
  }
