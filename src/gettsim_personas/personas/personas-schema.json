{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "required": ["name", "description", "varies_by", "input_data_tree", "tt_targets_tree"],
    "properties": {
      "name": {
        "type": "string"
      },
      "description": {
        "type": "string"
      },
      "varies_by": {
        "type": "object",
        "additionalProperties": {
          "type": "object",
          "additionalProperties": {
            "type": ["array", "object"],
            "items": {
              "type": ["integer", "number", "boolean", "string"]
            }
          }
        }
      },
      "start_date": {
        "type": "string",
        "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
      },
      "end_date": {
        "type": "string",
        "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
      },
      "input_data_tree": {
        "type": "object",
        "additionalProperties": {
          "type": ["array", "object"],
          "items": {
            "type": ["integer", "number", "boolean", "string"]
          }
        }
      },
      "tt_targets_tree": {
        "type": "object",
        "additionalProperties": {
          "type": ["object", "null"],
          "properties": {
            "value": {
              "type": ["null"]
            },
            "details": {
              "type": "object",
              "additionalProperties": {}
            }
          }
        }
      }
    }
  }
